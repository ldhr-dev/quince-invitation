---
import eventConfig from '@data/event-config.json';

const { celebrant } = eventConfig;
const eventDate = new Date(celebrant.date);
const formattedDate = eventDate.toLocaleDateString('es-MX', {
  day: 'numeric',
  month: 'long',
  year: 'numeric'
});
---

<section class="hero" id="inicio">
  <div class="hero-overlay"></div>
  <div class="hero-content container">
    <div class="hero-text fade-in">
      <p class="hero-subtitle">Mis XV Años</p>
      <h1 class="hero-title">{celebrant.name}</h1>
      <p class="hero-date">{formattedDate}</p>
      <div class="hero-actions">
        <a href="#detalles" class="btn">Ver Detalles</a>
        <a href="#galeria" class="btn btn-outline">Ver Galería</a>
      </div>
    </div>
  </div>
  <div class="hero-scroll">
    <span>Desliza hacia abajo</span>
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M19 12l-7 7-7-7"/>
    </svg>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg,
      rgba(30, 64, 175, 0.7) 0%,
      rgba(59, 130, 246, 0.5) 100%);
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: var(--color-white);
  }

  .hero-subtitle {
    font-family: "Mrs Saint Delafield", cursive;
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.9;
    letter-spacing: 2px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
  }

  .hero-title {
    font-family: "Dancing Script", cursive;
    font-size: 5rem;
    margin-bottom: 1.5rem;
    text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.6);
  }

  .hero-date {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    font-weight: 500;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-actions .btn {
    min-width: 200px;
  }

  .hero-scroll {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-white);
    animation: bounce 2s infinite;
  }

  .hero-scroll span {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
    40% { transform: translateX(-50%) translateY(-10px); }
    60% { transform: translateX(-50%) translateY(-5px); }
  }

  @media (max-width: 768px) {
    .hero-subtitle { font-size: 2rem; }
    .hero-actions { flex-direction: column; align-items: center; }
    .hero-actions .btn { width: 100%; max-width: 300px; }
  }
</style>